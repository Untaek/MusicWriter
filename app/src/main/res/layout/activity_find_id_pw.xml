<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_find_id_pw"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.limwoon.musicwriter.FindPwActivity"
    android:gravity="center"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:focusable="true"
    android:focusableInTouchMode="true"
    >

    <TextView
        android:text="가입 당시 설정했던 이메일로 새로운 임시 비밀번호가 보내집니다"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView3"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/editText_findid"
        android:hint="아이디를 입력하세요"
        android:layout_marginTop="28dp"
        />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/editText_findid_email"
        android:hint="이메일을 입력하세요"
        android:layout_marginTop="10dp"
        />

    <Button
        android:text="보내기"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="29dp"
        android:id="@+id/button_findid_confirm"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:textSize="20sp"/>
</LinearLayout>
